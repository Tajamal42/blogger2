<h1>All Articles</h1>

<ul id = "articles">
	<% @articles.each do |article| %>
		<li>
      		<%= link_to article.title, article_path(article), class: 'article_title', id: "article_#{article.id}" %>
      		<%= image_tag article.image.url(:medium) %>
    	</li>
	<% end %>
</ul>
<% @articles.each do |article| %>
<div class="posts col-lg-6 col-md-6 col-sm-6 col-xs-12">
    <div class="card">
        <div class="fakeimg" style="height:200px;"><%= image_tag article.image.url(:medium) %></div>
        	<h4><%= link_to article.title, article_path(article), class: 'article_title', id: "article_#{article.id}" %></h4>
            <p><%= article.body %></p>
    </div>
</div>
<% end %>
<% if logged_in? %>
<%= link_to "Create a New Article", new_article_path, class: "new_article" %>
<% end %>